{
  "name": "labo-string",
  "version": "1.0.0",
  "description": "CLI Node.js per manipolazione di stringhe",
  "main": "src/stringUtils.js",
  "scripts": {
    "start": "node src/stringUtils.js",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IlMuce/ssgs-labo-02.git"
  },
  "bugs": {
    "url": "https://github.com/IlMuce/ssgs-labo-02/issues"
  },
  "homepage": "https://github.com/IlMuce/ssgs-labo-02#readme",
  "author": "IlMuce",
  "license": "ISC",
  "keywords": [
    "cli",
    "string",
    "nodejs",
    "jest"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "rootDir": "./",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "text",
      "lcov"
    ]
  }
}